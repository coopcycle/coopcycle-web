{% extends "admin.html.twig" %}

{% block breadcrumb %}
<li>{% trans %}adminDashboard.metrics.title{% endtrans %}</li>
{% endblock %}

{% block content %}
<div id="cubejs"
  data-api-url="{{ cubejs_api_url }}"
  data-token="{{ cube_token }}"
  data-view="{{ app.request.query.get('view', 'marketplace') }}"
  data-date-range="{{ app.request.query.get('range', '30d') }}"
  data-zero-waste="{{ zero_waste|json_encode|e('html_attr') }}"
  data-tags="{{ tags|json_encode|e('html_attr') }}"
  data-ui-tasks-metrics-enabled="{{ ui_tasks_metrics_enabled }}"></div>
{% endblock %}

{% block styles %}
  {{ encore_entry_link_tags('metrics-admin') }}
{% endblock %}

{% block scripts %}
  {{ encore_entry_script_tags('metrics-admin') }}
{% endblock %}
