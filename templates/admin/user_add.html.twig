{% extends "admin.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block breadcrumb %}
  <li><a href="{{ path('admin_users') }}">{% trans %}adminDashboard.users.title{% endtrans %}</a></li>
  <li>{% trans %}adminDashboard.users.createNew{% endtrans %}</li>
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <h2 class="page-header">
        {% trans %}adminDashboard.users.createNew{%  endtrans %}
      </h2>
      {{ form_start(form) }}

        {{ form_row(form.username) }}
        {{ form_row(form.email) }}

        {{ form_row(form.givenName) }}
        {{ form_row(form.familyName) }}
        {{ form_row(form.telephone) }}

        {{ form_row(form.plainPassword) }}
        {{ form_row(form.quotesAllowed) }}
        <hr>
        <button type="submit" class="btn btn-block btn-lg btn-primary">{{ 'basics.save'|trans }}</button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
