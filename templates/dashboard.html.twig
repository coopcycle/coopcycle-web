{% extends "base.html.twig" %}

{% block menu %}
  {% include "dashboard/nav.html.twig" %}
{% endblock %}

{% block banner %}
{% endblock %}

{% block body %}
<section class="dashboard-subnav py-5">
  <div class="container container--full-height">
  {% block subnav %}{% endblock %}
  {% block dashboard_subnav %}{% endblock %}
  </div>
</section>
  {% if block('dashboard_actions') %}
<section class="dashboard-actions py-5">
    <div class="container container--full-height">
      {% block dashboard_actions %}{% endblock %}
    </div>
</section>
  {% endif %}
<div class="container container--full-height mt-5">
  <div class="row">
    <div class="col-xs-12">
      {% block content %}{% endblock %}
    </div>
  </div>
</div>
{% endblock %}

{% block footer %}
{% endblock %}

{% block styles %}
  {{ encore_entry_link_tags('widgets-admin') }}
{% endblock %}

{% block scripts_common %}
  {{ encore_entry_script_tags('widgets-admin') }}
  {% block scripts %}{% endblock %}
{% endblock %}
