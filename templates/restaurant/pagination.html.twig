    <li class="next" {% if next_page == page %}style="display: none;"{% endif %}><a href="{{ path('restaurants', {'geohash': geohash, 'page': next_page}) }}">{% trans %}pagination.next{% endtrans %} <span aria-hidden="true">&rarr;</span></a></li>
  </ul>
</nav>
