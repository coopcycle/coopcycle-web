{% extends 'restaurant/layout.html.twig' %}

{% form_theme form 'form/promotion.html.twig' %}

{% block breadcrumb %}
  <li><a href="{{ path(restaurants_route) }}">{% trans %}adminDashboard.shops.title{% endtrans %}</a></li>
  <li><a href="{{ path(restaurant_route, { id: restaurant.id }) }}">{{ restaurant.name }}</a></li>
{% endblock %}

{% block content %}
<div class="alert alert-info">
  {{ ('restaurant_promotion.disclaimer')|trans|raw }}
</div>
{{ form_start(form) }}
  {{ form_widget(form) }}
  <button type="submit" class="btn btn-block btn-primary">
    {{ 'basics.save'|trans }}
  </button>
{{ form_end(form) }}

{% endblock %}

{% block scripts %}
  {{ encore_entry_script_tags('promotion-form') }}
{% endblock %}
