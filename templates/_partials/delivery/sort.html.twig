<button class="btn btn-default btn-sm dropdown-toggle" type="button" id="deliveries-sort"
  data-toggle="dropdown"
  aria-haspopup="true" aria-expanded="true">
  {% if deliveries.isSorted('t.doneBefore') or deliveries.isSorted('d.createdAt') %}
    {% if deliveries.direction == 'asc' %}
      {{ 'deliveries.sort.oldest'|trans }}
    {% else %}
      {{ 'deliveries.sort.newest'|trans }}
    {% endif %}
  {% endif %}
  <span class="caret"></span>
</button>
<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="deliveries-sort">
  <li>{{ knp_pagination_sortable(deliveries,
    'deliveries.sort.newest'|trans, deliveries.paginatorOptions.defaultSortFieldName, {}, { direction: 'desc' } )|raw }}</li>
  <li>{{ knp_pagination_sortable(deliveries,
    'deliveries.sort.oldest'|trans, deliveries.paginatorOptions.defaultSortFieldName, {}, { direction: 'asc' } )|raw }}</li>
</ul>
