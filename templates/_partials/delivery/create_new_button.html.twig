{% if stores is defined and routes is defined %}
<span {{ react_component('Delivery/CreateNewButton', {
  stores: stores|map(s => {id: s.id, name: s.name}),
  routes: routes
}) }}></span>
{# Create a new delivery as a current store #}
{% elseif store is defined and routes is defined %}
