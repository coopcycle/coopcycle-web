<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Sylius\OrderReceipt" table="sylius_order_receipt">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="billingAddress" type="text" column="billing_address" nullable="true"/>
    <one-to-many field="lineItems" target-entity="AppBundle\Entity\Sylius\OrderReceiptLineItem" mapped-by="parent">
      <cascade>
        <cascade-all/>
      </cascade>
    </one-to-many>
    <one-to-many field="footerItems" target-entity="AppBundle\Entity\Sylius\OrderReceiptFooterItem" mapped-by="parent">
      <cascade>
        <cascade-all/>
      </cascade>
    </one-to-many>
  </entity>
</doctrine-mapping>
