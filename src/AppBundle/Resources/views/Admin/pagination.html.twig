{% if route_name is not defined %}
  {% set route_name = app.request.get('_route') %}
{% endif %}

<nav aria-label="...">
  <ul class="pager">
    {% set prev_page = (page > 1) ? page - 1 : 1 %}
    <li class="previous" {% if page == 1 %}style="display:none"{% endif %}">
      <a href="{{ path(route_name, {'p': prev_page}) }}"><span aria-hidden="true">&larr;</span> Précédent</a>
    </li>
    {% set next_page = (page < pages) ? page + 1 : page %}
    <li class="next" {% if page == pages %}style="display: none;"{% endif %}>
      <a href="{{ path(route_name, {'p': next_page}) }}">Suivant <span aria-hidden="true">&rarr;</span></a>
    </li>
  </ul>
</nav>