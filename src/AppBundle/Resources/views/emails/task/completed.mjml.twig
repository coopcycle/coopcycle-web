{% extends '@App/emails/layout.mjml.twig' %}

{% block content %}
<mj-column>
  <mj-text align="left" line-height="20px">
  {% if task.done %}
    {{ 'task.done.body' | trans({
      '%task.id%': task.id,
    }, 'emails') | raw }}
  {% endif %}
  {% if task.failed %}
    {{ 'task.failed.body' | trans({
      '%task.id%': task.id,
    }, 'emails') | raw }}
  {% endif %}
  </mj-text>
</mj-column>
{% endblock %}
